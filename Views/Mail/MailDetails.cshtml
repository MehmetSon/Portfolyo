@model Message;
@{
    ViewData["Title"] = "MailDetails";
    Layout = "~/Views/Layout/Index.cshtml";
}
<input type="hidden" asp-for="MessageId"/>
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Mailler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Mail Detayları</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							<b>Gönderen :</b> @Model.NameSurname <br />
							<b>Email :</b> @Model.Email <br />
							<b>Tarih :</b> @Model.SendDate.ToShortDateString()<br />
							<br /> <br /> <br /> <br />
							<b>Mail İçeriği :</b> @Model.MessageDetail
						</div>	
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

